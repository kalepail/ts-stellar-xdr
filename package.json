{
  "name": "ts-stellar-xdr",
  "version": "0.1.0",
  "description": "Modern, tree-shakable XDR codec for the Stellar network",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./codec": {
      "types": "./dist/codec.d.ts",
      "import": "./dist/codec.js"
    },
    "./strkey": {
      "types": "./dist/strkey.d.ts",
      "import": "./dist/strkey.js"
    },
    "./hashing": {
      "types": "./dist/hashing.d.ts",
      "import": "./dist/hashing.js"
    },
    "./validate": {
      "types": "./dist/validate.d.ts",
      "import": "./dist/validate.js"
    },
    "./json": {
      "types": "./dist/json.d.ts",
      "import": "./dist/json.js"
    },
    "./types": {
      "types": "./dist/generated/types.d.ts",
      "import": "./dist/generated/types.js"
    },
    "./asset": {
      "types": "./dist/generated/asset.d.ts",
      "import": "./dist/generated/asset.js"
    },
    "./transaction": {
      "types": "./dist/generated/transaction.d.ts",
      "import": "./dist/generated/transaction.js"
    },
    "./contract": {
      "types": "./dist/generated/contract.d.ts",
      "import": "./dist/generated/contract.js"
    },
    "./contract-spec": {
      "types": "./dist/generated/contract-spec.d.ts",
      "import": "./dist/generated/contract-spec.js"
    },
    "./contract-env-meta": {
      "types": "./dist/generated/contract-env-meta.d.ts",
      "import": "./dist/generated/contract-env-meta.js"
    },
    "./contract-meta": {
      "types": "./dist/generated/contract-meta.d.ts",
      "import": "./dist/generated/contract-meta.js"
    },
    "./contract-config-setting": {
      "types": "./dist/generated/contract-config-setting.d.ts",
      "import": "./dist/generated/contract-config-setting.js"
    },
    "./ledger-entries": {
      "types": "./dist/generated/ledger-entries.d.ts",
      "import": "./dist/generated/ledger-entries.js"
    },
    "./ledger": {
      "types": "./dist/generated/ledger.d.ts",
      "import": "./dist/generated/ledger.js"
    },
    "./scp": {
      "types": "./dist/generated/scp.d.ts",
      "import": "./dist/generated/scp.js"
    },
    "./overlay": {
      "types": "./dist/generated/overlay.d.ts",
      "import": "./dist/generated/overlay.js"
    },
    "./internal": {
      "types": "./dist/generated/internal.d.ts",
      "import": "./dist/generated/internal.js"
    },
    "./exporter": {
      "types": "./dist/generated/exporter.d.ts",
      "import": "./dist/generated/exporter.js"
    },
    "./introspection": {
      "types": "./dist/generated/introspection.d.ts",
      "import": "./dist/generated/introspection.js"
    },
    "./helpers": {
      "types": "./dist/helpers.d.ts",
      "import": "./dist/helpers.js"
    },
    "./scval": {
      "types": "./dist/scval.d.ts",
      "import": "./dist/scval.js"
    },
    "./framed": {
      "types": "./dist/framed.d.ts",
      "import": "./dist/framed.js"
    }
  },
  "scripts": {
    "build": "tsdown && node scripts/verify-exports.mjs",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src scripts tests",
    "lint:fix": "oxlint --fix src scripts tests",
    "fmt": "oxfmt .",
    "fmt:check": "oxfmt --check .",
    "codegen": "bun scripts/codegen/index.ts",
    "codegen:next": "bun scripts/codegen/index.ts --channel next",
    "sync:schemas": "node scripts/sync-xdr-json-schemas.mjs",
    "verify:exports": "node scripts/verify-exports.mjs",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@stellar/stellar-base": "^14.0.4",
    "@types/bun": "latest",
    "ajv": "^8.18.0",
    "oxfmt": "latest",
    "oxlint": "latest",
    "tsdown": "latest",
    "typescript": "latest",
    "vite": "latest",
    "vitest": "latest"
  },
  "packageManager": "bun@1.3.8"
}
